<%= simple_form_for(@animal, multipart: true) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :species_id, collection: Species.all %>
  <%= f.input :facility_id, collection: Facility.all %>
  <%= f.input :date_of_birth %>
  <%= f.input :studbook, label: 'Studbook Number' %>
  <%= f.input :sire, label: 'Sire' %>
  <%= f.input :dam, label: 'Dam' %>
  <%= f.input :tag %>
  <%= f.input :searchable %>
  <%= f.input :comments %>
  <%= f.simple_fields_for :pictures do |p| %>
    <%= p.label :image %>
    <%= p.file_field :image %>
  <% end %>

  <br/>

  <%= f.button :submit %>
<% end %>
