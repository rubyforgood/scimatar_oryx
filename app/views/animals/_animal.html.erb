<div class="Animal" style="float:left; padding: 5px;">
  <h3> <%= link_to animal.name, animal_path(animal) %> </h3>
  <h4> <%= animal.species.name %> </h4>

  <%= link_to animal_path(animal) do %>
  <%= image_tag animal.pictures.first.image.url(:large) if animal.pictures.first %>
  <% end %>
</div>
